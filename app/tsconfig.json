{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "module": "esnext",
      "target": "esnext",
      "sourceMap": true,
      "allowJs": false,
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "ts-shim.d.ts"
    ]
  }